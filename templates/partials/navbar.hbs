<link rel="shortcut icon" src="favicon.ico">
<style>
    #navbar {
        display: flex;
        height: 18vh;
        width: 100vw;
        position: absolute;
        z-index: 2;
    }
    #navbar .logo {
        align-self: center;
        position: absolute;
        top: 0;
        left: 0;
        height: 105px;
        margin: 1.7vh 0 0 16px;
        transition: transform 0.5s ease;
    }
    #navbar .logo:hover {
        transform: scale(1.06);
        cursor: pointer;
    }
    #navbar .links {
        margin-left: 155px;
        height: 64px;
        width: 100%;
        font-size: 20px;
        z-index: 1;
        display: flex;
    }
    #navbar .links .link {
        background: rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.5s ease;
        width: 12vw;
        text-align: center;
        height: 64px;
    }
    #navbar .links .link:hover {
        cursor: pointer;
        background: rgba(255, 255, 255, 0.3);
    }
    .not-logged-in, .logged-in {
        opacity: 0;
    }
    #hamburger {
        display: none;
        z-index: 1;
        margin-left: calc(100vw - 80px);
    }
    #hamburger-links {
        display: none;
        position: absolute;
        top: 100%;
        width: 100vw;
        left: calc(80px - 100vw);
    }
    #hamburger-links .link {
        width: 100vw;
        background: rgb(117, 117, 117);
        color: white;
        padding: 8px 0;
        text-align: center;
        font-family: "JetBrains Mono", "Roboto", Arial, Helvetica, sans-serif !important;
    }
    #hamburger-button {
        width: 80px;
        height: 80px;
        background-color: rgb(104, 104, 104);
        position: relative;
    }
    #hamburger-button:hover {
        cursor: pointer;
    }
    .line {
        display: block;
        width: 40px;
        height: 3px;
        background: white;
        position: absolute;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    @media only screen and (max-width: 1100px) {
        .homepage {
            display: none !important;
        }
    }
    @media only screen and (max-width: 700px) {
        #navbar .links {
            display: none;
        }
        #hamburger {
            display: block;
        }
        #top-bar {
            height: 80px !important;
        }
        #top-left-circle {
            display: none !important;
        }
        .logo {
            height: 70px !important;
            margin: 5px 0 0 10px !important;
        }
    }
</style>
<div id="navbar">
    <div id="top-bar" style="display: block; position: absolute; top: 0; left: 0; width: 100%; height: 64px; background: rgb(57, 61, 61);"></div>
    <div id="top-left-circle" style="display: block; position: absolute; top: 0; left: 0; height: 155px; width: 155px; border-radius: 0 0 12.5vh 0; transform: translateY(-17%); background: rgb(57, 61, 61);"></div>
    <img class="logo" src="./img/logo.png" alt="SBS Logo" onclick="window.location.href = '/'">
    <div class="links">
        <div class="link homepage" onclick="window.location.href = '/'">
            <a href="/">Homepage</a>
        </div>
        <div class="link" onclick="window.location.href = '/market'">
            <a href="/market">Market</a>
        </div>
        <div class="link" onclick="window.location.href = '/portfolio'">
            <a href="/portfolio">Portfolio</a>
        </div>
        <div class="link" onclick="window.location.href = '/news'">
            <a href="/news">News</a>
        </div>
        <div class="link" onclick="window.location.href = '/rankings'">
            <a href="/rankings">Rankings</a>
        </div>
        <div class="not-logged-in link" onclick="window.location.href = '/register'" style="transform: translateX(-100%) !important; position: absolute; right: 0; top: 0; background-color: rgb(214, 168, 16);">
            <a href="/register">Register</a>
        </div>
        <div class="not-logged-in link" onclick="window.location.href = '/login'" style="transform: none !important; position: absolute; right: 0; top: 0; background-color: rgb(0, 172, 100);">
            <a href="/login">Login</a>
        </div>
        <div class="logged-in link" onclick="window.location.href = '/account'" style="transform: none !important; position: absolute; right: 0; top: 0; background-color: rgb(0, 172, 100);">
            <a href="/account">Account</a>
        </div>
    </div>
    <div id="hamburger">
        <div id="hamburger-button" onclick="$('#hamburger-links').toggle()">
            <div style="top: 30%;" class="line"></div>
            <div style="top: 50%;" class="line"></div>
            <div style="top: 70%;" class="line"></div>
            <div id="hamburger-links">
                <div class="link" onclick="window.location.href = '/market'">Market</div>
                <div class="link" onclick="window.location.href = '/portfolio'">Portfolio</div>
                <div class="link" onclick="window.location.href = '/news'">News</div>
                <div class="link" onclick="window.location.href = '/rankings'">Rankings</div>
                <div class="not-logged-in link" onclick="window.location.href = '/register'">Register</div>
                <div class="not-logged-in link" onclick="window.location.href = '/login'">Login</div>
                <div class="logged-in link" onclick="window.location.href = '/account'">Account</div>
            </div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    fetch("/retrieve", {method: "POST"}).then((res) => {
        if (res.ok) {
            $(".not-logged-in").remove()
            $(".logged-in").animate({"opacity": 1}, 500)
        } else {
            $(".not-logged-in").animate({"opacity": 1}, 500)
            $(".logged-in").remove()
        }
    })
</script>
<div style="display: block; height: 18vh;"></div>